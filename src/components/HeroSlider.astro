  .particles {
    background-image: 
      radial-gradient(circle at 20% 80%, rgba(26, 45, 231, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(143, 41, 188, 0.1) 0%, transparent 50%);
  }
  
