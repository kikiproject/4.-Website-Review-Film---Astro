---
interface Movie {
  id: number;
  title: string;
  overview: string;
  backdropPath: string | null;
  posterPath: string | null;
  releaseDate?: string;
  voteAverage: number;
  genreIds?: number[];
}

interface Props {
  movies: Movie[];
}

const { movies } = Astro.props;

const imageBaseUrl = 'https://image.tmdb.org/t/p';

// Genre mapping
const genreMap: Record<number, string> = {
  28: 'Action',
  12: 'Adventure',
  16: 'Animation',
  35: 'Comedy',
  80: 'Crime',
  99: 'Documentary',
  18: 'Drama',
  10751: 'Family',
  14: 'Fantasy',
  36: 'History',
  27: 'Horror',
  10402: 'Music',
  9648: 'Mystery',
  10749: 'Romance',
  878: 'Sci-Fi',
  10770: 'TV Movie',
  53: 'Thriller',
  10752: 'War',
  37: 'Western',
};
---

<section class="relative">
  <!-- Hero Slider -->
  <div id="hero-slider" class="relative h-[70vh] md:h-[85vh] overflow-hidden">
    {movies.map((movie, index) => {
      const backdropUrl = movie.backdropPath 
        ? `${imageBaseUrl}/original${movie.backdropPath}`
        : '/images/default-backdrop.jpg';
      const genres = movie.genreIds?.slice(0, 3).map(id => genreMap[id]).filter(Boolean) || [];
      const year = movie.releaseDate ? new Date(movie.releaseDate).getFullYear() : null;
      const rating = Math.round(movie.voteAverage * 10) / 10;
      
      return (
        <div 
          class={`hero-slide absolute inset-0 transition-all duration-1000 ease-out ${index === 0 ? 'opacity-100 scale-100' : 'opacity-0 scale-105'}`}
          data-index={index}
        >
          <!-- Background Image with Ken Burns effect -->
          <div class="absolute inset-0 overflow-hidden">
            <img 
              src={backdropUrl} 
              alt={movie.title}
              class="hero-bg-image w-full h-full object-cover transform scale-110 transition-transform duration-[12000ms] ease-linear"
            />
            <!-- Gradient overlays -->
            <div class="absolute inset-0 bg-gradient-to-t from-dark-500 via-dark-500/60 to-dark-500/20"></div>
            <div class="absolute inset-0 bg-gradient-to-r from-dark-500 via-dark-500/70 to-transparent"></div>
            <!-- Animated particles -->
            <div class="particles absolute inset-0 pointer-events-none"></div>
          </div>

          <!-- Content -->
          <div class="relative h-full container-custom flex items-center">
            <div class="max-w-2xl space-y-6" data-aos="fade-right" data-aos-delay="200">
              <!-- Badges -->
              <div class="flex flex-wrap items-center gap-2" data-aos="fade-up" data-aos-delay="300">
                <span class="px-4 py-1.5 bg-gradient-to-r from-primary-500 to-violet-500 text-white text-sm font-bold rounded-full flex items-center gap-2 animate-pulse-glow">
                  <span class="w-2 h-2 bg-white rounded-full animate-ping"></span>
                  ðŸ”¥ Trending #{index + 1}
                </span>
                {genres.map((genre) => (
                  <span class="px-3 py-1 bg-white/10 backdrop-blur-sm text-white text-sm rounded-full border border-white/20">{genre}</span>
                ))}
              </div>

              <!-- Title with gradient animation -->
              <h1 class="text-4xl md:text-5xl lg:text-7xl font-display font-bold text-white leading-tight" data-aos="fade-up" data-aos-delay="400">
                <span class="bg-clip-text text-transparent bg-gradient-to-r from-white via-primary-200 to-white animate-gradient-text">
                  {movie.title}
                </span>
              </h1>

              <!-- Meta Info -->
              <div class="flex items-center gap-6 text-secondary-200" data-aos="fade-up" data-aos-delay="500">
                {year && (
                  <span class="flex items-center gap-2 px-3 py-1.5 bg-white/5 rounded-lg backdrop-blur-sm">
                    <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    <span class="font-medium">{year}</span>
                  </span>
                )}
                <span class="flex items-center gap-2 px-3 py-1.5 bg-yellow-500/10 rounded-lg backdrop-blur-sm border border-yellow-500/20">
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  <span class="font-bold text-yellow-400">{rating}</span>
                  <span class="text-secondary-400">/10</span>
                </span>
                <span class="flex items-center gap-2 px-3 py-1.5 bg-white/5 rounded-lg backdrop-blur-sm">
                  <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                  </svg>
                  <span class="font-medium">2.5M</span>
                </span>
              </div>

              <!-- Overview -->
              <p class="text-secondary-200 text-lg line-clamp-3 leading-relaxed" data-aos="fade-up" data-aos-delay="600">
                {movie.overview || 'Deskripsi tidak tersedia.'}
              </p>

              <!-- Actions -->
              <div class="flex flex-wrap items-center gap-4 pt-2" data-aos="fade-up" data-aos-delay="700">
                <a href={`/film/${movie.id}`} class="group relative px-8 py-4 bg-gradient-to-r from-primary-500 to-violet-500 rounded-xl text-white font-bold text-lg overflow-hidden transition-all duration-300 hover:shadow-glow hover:scale-105">
                  <span class="absolute inset-0 bg-gradient-to-r from-violet-500 to-primary-500 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
                  <span class="relative flex items-center gap-2">
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M8 5v14l11-7z"/>
                    </svg>
                    Lihat Detail
                  </span>
                </a>
                <button 
                  class="group px-6 py-4 bg-white/10 backdrop-blur-sm rounded-xl text-white font-medium text-lg border border-white/20 hover:bg-white/20 hover:border-white/40 transition-all duration-300 flex items-center gap-2"
                  data-watchlist={movie.id}
                >
                  <svg class="w-6 h-6 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
                  </svg>
                  Watchlist
                </button>
                <button 
                  class="group p-4 bg-white/10 backdrop-blur-sm rounded-xl text-white border border-white/20 hover:bg-magenta-500/20 hover:border-magenta-500/40 transition-all duration-300"
                >
                  <svg class="w-6 h-6 transition-transform group-hover:scale-125" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                  </svg>
                </button>
              </div>
            </div>
          </div>
        </div>
      );
    })}
  </div>

  <!-- Slider Navigation - Modern Design -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex items-center gap-6 z-10">
    <!-- Previous -->
    <button 
      id="hero-prev"
      class="group w-12 h-12 rounded-full bg-white/10 backdrop-blur-md flex items-center justify-center text-white hover:bg-primary-500 transition-all duration-300 border border-white/20 hover:border-primary-500 hover:scale-110"
      aria-label="Slide sebelumnya"
    >
      <svg class="w-6 h-6 transition-transform group-hover:-translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
    </button>

    <!-- Dots with animated progress -->
    <div class="flex items-center gap-3">
      {movies.map((_, index) => (
        <button 
          class={`hero-dot relative w-3 h-3 rounded-full transition-all duration-500 overflow-hidden ${index === 0 ? 'bg-primary-500 w-12' : 'bg-white/30 hover:bg-white/50'}`}
          data-index={index}
          aria-label={`Slide ${index + 1}`}
        >
          <span class="dot-progress absolute inset-0 bg-white/50 origin-left scale-x-0"></span>
        </button>
      ))}
    </div>

    <!-- Next -->
    <button 
      id="hero-next"
      class="group w-12 h-12 rounded-full bg-white/10 backdrop-blur-md flex items-center justify-center text-white hover:bg-primary-500 transition-all duration-300 border border-white/20 hover:border-primary-500 hover:scale-110"
      aria-label="Slide berikutnya"
    >
      <svg class="w-6 h-6 transition-transform group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    </button>
  </div>

  <!-- Scroll Down Indicator -->
  <div class="absolute bottom-8 right-8 z-10 hidden md:flex flex-col items-center gap-2 animate-bounce">
    <span class="text-white/50 text-xs uppercase tracking-widest rotate-90 origin-center">Scroll</span>
    <svg class="w-5 h-5 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
    </svg>
  </div>

  <!-- Progress Bar at bottom -->
  <div class="absolute bottom-0 left-0 right-0 h-1 bg-white/10">
    <div id="hero-progress" class="h-full bg-gradient-to-r from-primary-500 via-violet-500 to-magenta-500 w-0 transition-all duration-100"></div>
  </div>
</section>

<script>
  const slides = document.querySelectorAll('.hero-slide');
  const dots = document.querySelectorAll('.hero-dot');
  const prevBtn = document.getElementById('hero-prev');
  const nextBtn = document.getElementById('hero-next');
  const progressBar = document.getElementById('hero-progress');
  
  let currentIndex = 0;
  let autoplayInterval: ReturnType<typeof setInterval>;
  let progressInterval: ReturnType<typeof setInterval>;
  const autoplayDuration = 8000;
  const progressStep = 100 / (autoplayDuration / 100);

  function showSlide(index: number) {
    slides.forEach((slide, i) => {
      const bgImage = slide.querySelector('.hero-bg-image') as HTMLElement;
      
      if (i === index) {
        slide.classList.add('opacity-100');
        slide.classList.remove('opacity-0', 'scale-105');
        // Ken Burns effect - slow zoom
        if (bgImage) {
          bgImage.style.transform = 'scale(1.1)';
          setTimeout(() => {
            bgImage.style.transform = 'scale(1.2)';
          }, 100);
        }
      } else {
        slide.classList.remove('opacity-100');
        slide.classList.add('opacity-0', 'scale-105');
        // Reset zoom for next time
        if (bgImage) {
          bgImage.style.transform = 'scale(1.1)';
        }
      }
    });

    dots.forEach((dot, i) => {
      const progress = dot.querySelector('.dot-progress') as HTMLElement;
      if (i === index) {
        dot.classList.add('bg-primary-500', 'w-12');
        dot.classList.remove('bg-white/30');
        // Animate progress inside dot
        if (progress) {
          progress.style.transform = 'scaleX(0)';
          progress.style.transition = `transform ${autoplayDuration}ms linear`;
          setTimeout(() => {
            progress.style.transform = 'scaleX(1)';
          }, 50);
        }
      } else {
        dot.classList.remove('bg-primary-500', 'w-12');
        dot.classList.add('bg-white/30');
        if (progress) {
          progress.style.transform = 'scaleX(0)';
          progress.style.transition = 'none';
        }
      }
    });

    currentIndex = index;
    resetProgress();
  }

  function nextSlide() {
    const newIndex = (currentIndex + 1) % slides.length;
    showSlide(newIndex);
  }

  function prevSlide() {
    const newIndex = (currentIndex - 1 + slides.length) % slides.length;
    showSlide(newIndex);
  }

  function resetProgress() {
    if (progressBar) progressBar.style.width = '0%';
    clearInterval(progressInterval);
    let progress = 0;
    progressInterval = setInterval(() => {
      progress += progressStep;
      if (progressBar) progressBar.style.width = `${Math.min(progress, 100)}%`;
      if (progress >= 100) clearInterval(progressInterval);
    }, 100);
  }

  function startAutoplay() {
    autoplayInterval = setInterval(nextSlide, autoplayDuration);
    resetProgress();
  }

  function stopAutoplay() {
    clearInterval(autoplayInterval);
    clearInterval(progressInterval);
  }

  // Event listeners
  nextBtn?.addEventListener('click', () => {
    nextSlide();
    stopAutoplay();
    startAutoplay();
  });

  prevBtn?.addEventListener('click', () => {
    prevSlide();
    stopAutoplay();
    startAutoplay();
  });

  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      showSlide(index);
      stopAutoplay();
      startAutoplay();
    });
  });

  // Pause on hover
  const slider = document.getElementById('hero-slider');
  slider?.addEventListener('mouseenter', stopAutoplay);
  slider?.addEventListener('mouseleave', startAutoplay);

  // Touch support
  let touchStartX = 0;
  let touchEndX = 0;

  slider?.addEventListener('touchstart', (e) => {
    touchStartX = e.changedTouches[0].screenX;
  });

  slider?.addEventListener('touchend', (e) => {
    touchEndX = e.changedTouches[0].screenX;
    if (touchStartX - touchEndX > 50) {
      nextSlide();
      stopAutoplay();
      startAutoplay();
    } else if (touchEndX - touchStartX > 50) {
      prevSlide();
      stopAutoplay();
      startAutoplay();
    }
  });

  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowLeft') {
      prevSlide();
      stopAutoplay();
      startAutoplay();
    } else if (e.key === 'ArrowRight') {
      nextSlide();
      stopAutoplay();
      startAutoplay();
    }
  });

  // Start autoplay
  startAutoplay();
  
  // Initialize first slide Ken Burns effect
  const firstBgImage = slides[0]?.querySelector('.hero-bg-image') as HTMLElement;
  if (firstBgImage) {
    firstBgImage.style.transform = 'scale(1.2)';
  }
</script>

<style>
