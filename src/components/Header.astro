---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Beranda', icon: 'home' },
  { href: '/jelajahi', label: 'Jelajahi', icon: 'compass' },
  { href: '/film', label: 'Film', icon: 'film' },
  { href: '/anime', label: 'Anime', icon: 'sparkles' },
  { href: '/series', label: 'Series', icon: 'tv' },
];

const isActive = (href: string) => {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
};
---

<header class="fixed top-0 left-0 right-0 z-50 bg-dark-500/80 backdrop-blur-xl border-b border-dark-100">
  <div class="container-custom">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <div class="relative w-10 h-10 md:w-12 md:h-12 rounded-xl bg-gradient-primary flex items-center justify-center shadow-glow group-hover:shadow-glow-violet transition-all duration-300">
          <svg class="w-6 h-6 md:w-7 md:h-7 text-white" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" fill="currentColor"/>
          </svg>
        </div>
        <span class="text-2xl md:text-3xl font-display font-bold text-white hidden sm:block">
          ASTRO
        </span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-1">
        {navLinks.map((link) => (
          <a 
            href={link.href} 
            class={`nav-link ${isActive(link.href) ? 'active' : ''}`}
          >
            {link.label}
          </a>
        ))}
      </nav>

      <!-- Right Section -->
      <div class="flex items-center gap-2 md:gap-4">
        <!-- Search Button -->
        <button 
          id="search-trigger"
          class="btn-icon"
          aria-label="Cari film"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        </button>

        <!-- Notifications -->
        <button 
          id="notification-trigger"
          class="btn-icon relative"
          aria-label="Notifikasi"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
          </svg>
          <span class="notification-badge hidden absolute -top-1 -right-1 w-5 h-5 bg-magenta-400 text-white text-xs font-bold rounded-full flex items-center justify-center">
            3
          </span>
        </button>

        <!-- User Menu / Login Button -->
        <div class="hidden md:block">
          <a href="/masuk" class="btn-primary text-sm px-4 py-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
            </svg>
            Masuk
          </a>
        </div>

        <!-- Mobile Menu Toggle -->
        <button 
          id="mobile-menu-toggle"
          class="btn-icon lg:hidden"
          aria-label="Menu"
        >
          <svg class="w-6 h-6 menu-open" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
          <svg class="w-6 h-6 menu-close hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="lg:hidden hidden bg-dark-400 border-t border-dark-100">
    <div class="container-custom py-4">
      <nav class="flex flex-col gap-1">
        {navLinks.map((link) => (
          <a 
            href={link.href} 
            class={`flex items-center gap-3 px-4 py-3 rounded-xl transition-all duration-300 ${
              isActive(link.href) 
                ? 'bg-primary-500/10 text-primary-400' 
                : 'text-secondary-400 hover:text-white hover:bg-dark-300'
            }`}
          >
            {link.label}
          </a>
        ))}
        <hr class="my-2 border-dark-100" />
        <a 
          href="/masuk" 
          class="flex items-center gap-3 px-4 py-3 rounded-xl text-secondary-400 hover:text-white hover:bg-dark-300 transition-all duration-300"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
          </svg>
          Masuk
        </a>
        <a 
          href="/daftar" 
          class="flex items-center gap-3 px-4 py-3 rounded-xl bg-gradient-primary text-white"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
          </svg>
          Daftar
        </a>
      </nav>
    </div>
  </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-16 md:h-20"></div>

<script>
  // Mobile menu toggle
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuOpen = mobileMenuToggle?.querySelector('.menu-open');
  const menuClose = mobileMenuToggle?.querySelector('.menu-close');

  mobileMenuToggle?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuOpen?.classList.toggle('hidden');
    menuClose?.classList.toggle('hidden');
  });

  // Search trigger
  const searchTrigger = document.getElementById('search-trigger');
  const searchModal = document.getElementById('search-modal');
  
  searchTrigger?.addEventListener('click', () => {
    searchModal?.classList.remove('hidden');
    searchModal?.querySelector('input')?.focus();
  });

  // Close mobile menu on link click
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      menuOpen?.classList.remove('hidden');
      menuClose?.classList.add('hidden');
    });
  });
</script>
