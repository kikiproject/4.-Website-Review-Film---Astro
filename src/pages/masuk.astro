---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Masuk - ASTRO" description="Masuk ke akun ASTRO Anda untuk melanjutkan">
  <div class="min-h-screen flex">
    <!-- Left Side - Form -->
    <div class="flex-1 flex items-center justify-center p-6 md:p-12">
      <div class="w-full max-w-md space-y-8">
        <!-- Logo -->
        <div class="text-center">
          <a href="/" class="inline-flex items-center gap-3 mb-6">
            <div class="w-12 h-12 rounded-xl bg-gradient-primary flex items-center justify-center shadow-glow">
              <svg class="w-7 h-7 text-white" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" fill="currentColor"/>
              </svg>
            </div>
            <span class="text-3xl font-display font-bold text-white">ASTRO</span>
          </a>
          <h1 class="text-2xl md:text-3xl font-display font-bold text-white mb-2">
            Selamat Datang Kembali!
          </h1>
          <p class="text-secondary-400">
            Masuk untuk melanjutkan ke akunmu
          </p>
        </div>

        <!-- Login Form -->
        <form id="login-form" class="space-y-6">
          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-medium text-secondary-300 mb-2">
              Email
            </label>
            <div class="relative">
              <input 
                type="email" 
                id="email" 
                name="email"
                required
                placeholder="nama@email.com"
                class="input pl-12"
              />
              <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-secondary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
              </svg>
            </div>
          </div>

          <!-- Password -->
          <div>
            <label for="password" class="block text-sm font-medium text-secondary-300 mb-2">
              Password
            </label>
            <div class="relative">
              <input 
                type="password" 
                id="password" 
                name="password"
                required
                placeholder="••••••••"
                class="input pl-12 pr-12"
              />
              <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-secondary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
              <button 
                type="button" 
                id="toggle-password"
                class="absolute right-4 top-1/2 -translate-y-1/2 text-secondary-500 hover:text-white transition-colors"
              >
                <svg class="w-5 h-5 eye-open" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
                <svg class="w-5 h-5 eye-closed hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>
                </svg>
              </button>
            </div>
          </div>

          <!-- Remember & Forgot -->
          <div class="flex items-center justify-between">
            <label class="flex items-center gap-2 cursor-pointer">
              <input type="checkbox" name="remember" class="w-4 h-4 rounded bg-dark-300 border-dark-100 text-primary-500 focus:ring-primary-500 focus:ring-offset-dark-500" />
              <span class="text-sm text-secondary-400">Ingat saya</span>
            </label>
            <a href="/lupa-password" class="text-sm text-primary-400 hover:text-primary-300 transition-colors">
              Lupa Password?
            </a>
          </div>

          <!-- Submit Button -->
          <button type="submit" class="btn-primary w-full py-4 text-lg">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
            </svg>
            Masuk
          </button>
        </form>

        <!-- Divider -->
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-dark-100"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-4 bg-dark-500 text-secondary-500">atau masuk dengan</span>
          </div>
        </div>

        <!-- Social Login -->
        <div class="grid grid-cols-1 gap-3">
          <button 
            type="button" 
            id="google-login"
            class="flex items-center justify-center gap-3 px-4 py-3 bg-white text-dark-500 font-medium rounded-xl hover:bg-gray-100 transition-all duration-300"
          >
            <svg class="w-5 h-5" viewBox="0 0 24 24">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            Masuk dengan Google
          </button>
        </div>

        <!-- Register Link -->
        <p class="text-center text-secondary-400">
          Belum punya akun? 
          <a href="/daftar" class="text-primary-400 hover:text-primary-300 font-medium transition-colors">
            Daftar sekarang
          </a>
        </p>
      </div>
    </div>

    <!-- Right Side - Image (Hidden on Mobile) -->
    <div class="hidden lg:block lg:w-1/2 relative">
      <div class="absolute inset-0 bg-gradient-to-br from-primary-500/20 via-violet-500/20 to-magenta-500/20"></div>
      <div class="absolute inset-0 bg-[url('/images/auth-bg.jpg')] bg-cover bg-center opacity-30"></div>
      <div class="absolute inset-0 bg-gradient-to-l from-transparent to-dark-500"></div>
      
      <!-- Content -->
      <div class="relative h-full flex flex-col items-center justify-center p-12 text-center">
        <div class="max-w-md space-y-6">
          <div class="w-24 h-24 mx-auto rounded-2xl bg-gradient-primary flex items-center justify-center shadow-glow">
            <svg class="w-14 h-14 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z"/>
            </svg>
          </div>
          <h2 class="text-3xl font-display font-bold text-white">
            Temukan Film Favoritmu
          </h2>
          <p class="text-secondary-300 text-lg">
            Bergabunglah dengan komunitas pecinta film terbesar di Indonesia. Bagikan review, temukan rekomendasi, dan nikmati pengalaman menonton yang lebih baik.
          </p>
          <div class="flex items-center justify-center gap-8 pt-4">
            <div class="text-center">
              <div class="text-3xl font-bold text-white">10K+</div>
              <div class="text-secondary-400 text-sm">Film</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-white">50K+</div>
              <div class="text-secondary-400 text-sm">Review</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-white">100K+</div>
              <div class="text-secondary-400 text-sm">Pengguna</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  // Toggle password visibility
  const togglePassword = document.getElementById('toggle-password');
  const passwordInput = document.getElementById('password') as HTMLInputElement;
  const eyeOpen = togglePassword?.querySelector('.eye-open');
  const eyeClosed = togglePassword?.querySelector('.eye-closed');

  togglePassword?.addEventListener('click', () => {
    const type = passwordInput?.type === 'password' ? 'text' : 'password';
    if (passwordInput) passwordInput.type = type;
    eyeOpen?.classList.toggle('hidden');
    eyeClosed?.classList.toggle('hidden');
  });

  // Form submission
  const loginForm = document.getElementById('login-form');
  loginForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(e.target as HTMLFormElement);
    const email = formData.get('email');
    const password = formData.get('password');
    
    // TODO: Implement actual login
    console.log('Login attempt:', { email, password });
    
    // Redirect to home on success
    // window.location.href = '/';
  });

  // Google Login
  const googleLogin = document.getElementById('google-login');
  googleLogin?.addEventListener('click', () => {
    // TODO: Implement Google OAuth
    console.log('Google login clicked');
    // window.location.href = '/api/auth/google';
  });
</script>
