---
import MainLayout from '../layouts/MainLayout.astro';
import { getNowPlayingMovies, getUpcomingMovies, getMovieDetails } from '../lib/tmdb';
import { Icon } from '@iconify/react';

// Fetch real-time data from TMDB
let nowPlayingMovies = [];
let upcomingMovies = [];

try {
  const [nowPlaying, upcoming] = await Promise.all([
    getNowPlayingMovies(1),
    getUpcomingMovies(1)
  ]);
  nowPlayingMovies = nowPlaying.results.slice(0, 6);
  upcomingMovies = upcoming.results.slice(0, 6);
} catch (error) {
  console.error('Error fetching movies:', error);
}

// VTuber hosts for watch parties
const vtuberHosts = [
  { name: "Sakura Hana", avatar: "https://ui-avatars.com/api/?name=Sakura+Hana&background=8B5CF6&color=fff", followers: 12500 },
  { name: "Luna Celestia", avatar: "https://ui-avatars.com/api/?name=Luna+Celestia&background=6366F1&color=fff", followers: 15200 },
  { name: "Yuki Shirogane", avatar: "https://ui-avatars.com/api/?name=Yuki+Shirogane&background=EC4899&color=fff", followers: 8300 },
];

// Create featured rooms from real movies
const featuredRooms = nowPlayingMovies.slice(0, 3).map((movie, index) => ({
  id: movie.id,
  movieTitle: movie.title,
  moviePoster: movie.posterPath,
  backdropPath: movie.backdropPath,
  host: vtuberHosts[index % vtuberHosts.length],
  participants: Math.floor(Math.random() * 50) + 20,
  maxParticipants: 100,
  voteAverage: movie.voteAverage
}));

// Create scheduled parties from upcoming movies
const scheduledParties = upcomingMovies.slice(0, 4).map((movie, index) => {
  const futureDate = new Date();
  futureDate.setDate(futureDate.getDate() + index + 1);
  return {
    id: movie.id,
    title: movie.title,
    posterPath: movie.posterPath,
    date: futureDate.toLocaleDateString('id-ID', { weekday: 'long', day: 'numeric', month: 'short' }),
    time: `${19 + index}:00 WIB`,
    host: vtuberHosts[index % vtuberHosts.length],
    slots: Math.floor(Math.random() * 30) + 10,
    releaseDate: movie.releaseDate
  };
});

const imageBaseUrl = 'https://image.tmdb.org/t/p';
---

<MainLayout title="Nonton Bareng - ASTRO" description="Nonton film bareng teman-teman di ASTRO">
  <!-- Hero Section -->
  <div class="relative h-[50vh] overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-primary-500/30 via-violet-500/20 to-magenta-500/30"></div>
    <div class="absolute inset-0 bg-dark-500/80"></div>
    
    <!-- Animated background -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-20 left-20 w-72 h-72 bg-primary-500/20 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-20 right-20 w-96 h-96 bg-violet-500/20 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>
    </div>
    
    <div class="relative h-full container-custom flex items-center justify-center text-center">
      <div data-aos="zoom-in">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-primary-500/20 rounded-full text-primary-400 text-sm font-medium mb-6 border border-primary-500/30">
          <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
          {featuredRooms.length} Ruangan Aktif
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-white mb-4 flex items-center justify-center gap-4">
          <Icon icon="mdi:popcorn" class="w-12 h-12 text-yellow-400" client:load />
          Nonton <span class="animate-gradient-text">Bareng</span>
        </h1>
        <p class="text-xl text-secondary-300 max-w-2xl mx-auto mb-8">
          Tonton film favorit bersama teman-teman. Sinkronisasi real-time, live chat, dan reaksi bersama!
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/watch/create" class="px-8 py-4 bg-gradient-to-r from-primary-500 to-violet-500 rounded-xl text-white font-bold text-lg hover:shadow-glow transition-all hover:scale-105 flex items-center gap-2">
            <Icon icon="lucide:plus" class="w-6 h-6" client:load />
            Buat Ruangan
          </a>
          <button class="px-8 py-4 bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl text-white font-bold text-lg hover:bg-white/20 transition-all flex items-center gap-2">
            <Icon icon="lucide:search" class="w-6 h-6" client:load />
            Cari Ruangan
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="container-custom py-12">
    <!-- Live Now Section -->
    <section class="mb-16" data-aos="fade-up">
      <div class="flex items-center justify-between mb-8">
        <div>
          <h2 class="text-2xl font-bold text-white flex items-center gap-3">
            <span class="flex items-center gap-2 px-3 py-1 bg-red-500 rounded-full text-sm">
              <span class="w-2 h-2 bg-white rounded-full animate-pulse"></span>
              LIVE
            </span>
            Sedang Berlangsung
          </h2>
          <p class="text-secondary-400 mt-1">Gabung sekarang dan tonton bersama!</p>
        </div>
        <a href="/nonton-bareng/semua" class="text-primary-400 hover:text-primary-300 flex items-center gap-1">
          Lihat Semua
          <Icon icon="lucide:chevron-right" class="w-4 h-4" client:load />
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {featuredRooms.map((room, index) => (
          <a 
            href={`/watch/${room.id}`}
            class="group relative bg-dark-400 rounded-2xl overflow-hidden border border-dark-100 hover:border-primary-500/50 transition-all duration-300 hover:-translate-y-2 hover:shadow-card"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <!-- Movie Poster -->
            <div class="relative aspect-video overflow-hidden">
              <img 
                src={`${imageBaseUrl}/w780${room.backdropPath || room.moviePoster}`}
                alt={room.movieTitle}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-dark-400 to-transparent"></div>
              
              <!-- Live Badge -->
              <div class="absolute top-4 left-4 flex items-center gap-2 px-3 py-1.5 bg-red-500 rounded-full text-white text-sm font-bold">
                <span class="w-2 h-2 bg-white rounded-full animate-pulse"></span>
                LIVE
              </div>

              <!-- Participants -->
              <div class="absolute top-4 right-4 flex items-center gap-2 px-3 py-1.5 bg-black/50 backdrop-blur-sm rounded-full text-white text-sm">
                <Icon icon="lucide:users" class="w-4 h-4" client:load />
                {room.participants}/{room.maxParticipants}
              </div>

              <!-- Rating Badge -->
              <div class="absolute bottom-4 left-4 flex items-center gap-1 px-2 py-1 bg-yellow-500/90 rounded text-black text-xs font-bold">
                <Icon icon="lucide:star" class="w-3 h-3 fill-current" client:load />
                {room.voteAverage?.toFixed(1)}
              </div>

              <!-- Play Button -->
              <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center text-white hover:bg-primary-600 transition-colors shadow-glow">
                  <Icon icon="lucide:play" class="w-8 h-8 ml-1" client:load />
                </div>
              </div>
            </div>

            <!-- Info -->
            <div class="p-5">
              <h3 class="text-lg font-bold text-white mb-2 group-hover:text-primary-400 transition-colors line-clamp-1">
                {room.movieTitle}
              </h3>
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-2">
                  <img 
                    src={room.host.avatar}
                    alt={room.host.name}
                    class="w-8 h-8 rounded-full ring-2 ring-primary-500/50"
                  />
                  <div>
                    <p class="text-white text-sm font-medium flex items-center gap-1">
                      {room.host.name}
                      <Icon icon="lucide:badge-check" class="w-4 h-4 text-primary-400" client:load />
                    </p>
                    <p class="text-secondary-400 text-xs">VTuber Host</p>
                  </div>
                </div>
                <span class="px-4 py-2 bg-primary-500 hover:bg-primary-600 rounded-lg text-white text-sm font-medium transition-colors">
                  Gabung
                </span>
              </div>
            </div>
          </a>
        ))}
      </div>
    </section>

    <!-- Upcoming Section -->
    <section class="mb-16" data-aos="fade-up">
      <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-2">
        <Icon icon="lucide:calendar" class="w-6 h-6 text-primary-400" client:load />
        Jadwal Mendatang
      </h2>

      <div class="bg-dark-400 rounded-2xl border border-dark-100 overflow-hidden">
        {scheduledParties.map((party, index) => (
          <a 
            href={`/watch/${party.id}`}
            class={`flex items-center justify-between p-5 ${index !== scheduledParties.length - 1 ? 'border-b border-dark-100' : ''} hover:bg-dark-300 transition-colors`}
          >
            <div class="flex items-center gap-4">
              <div class="w-16 h-20 bg-dark-300 rounded-lg overflow-hidden flex-shrink-0">
                <img 
                  src={`${imageBaseUrl}/w185${party.posterPath}`}
                  alt={party.title}
                  class="w-full h-full object-cover"
                />
              </div>
              <div>
                <h3 class="text-white font-bold line-clamp-1">{party.title}</h3>
                <p class="text-secondary-400 text-sm flex items-center gap-2 mt-1">
                  <Icon icon="lucide:calendar" class="w-4 h-4" client:load />
                  {party.date} â€¢ {party.time}
                </p>
                <div class="flex items-center gap-2 mt-2">
                  <img src={party.host.avatar} alt={party.host.name} class="w-5 h-5 rounded-full" />
                  <span class="text-secondary-300 text-xs">Host: {party.host.name}</span>
                </div>
              </div>
            </div>
            <div class="flex items-center gap-4">
              <span class="text-sm text-primary-400 flex items-center gap-1">
                <Icon icon="lucide:ticket" class="w-4 h-4" client:load />
                {party.slots} slot tersisa
              </span>
              <span class="px-4 py-2 bg-dark-200 hover:bg-primary-500 rounded-lg text-white text-sm font-medium transition-colors flex items-center gap-2">
                <Icon icon="lucide:bell" class="w-4 h-4" client:load />
                Ingatkan
              </span>
            </div>
          </a>
        ))}
      </div>
    </section>

    <!-- Features Section -->
    <section data-aos="fade-up">
      <h2 class="text-2xl font-bold text-white text-center mb-12">
        Fitur <span class="text-gradient">Nonton Bareng</span>
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {[
          { icon: "lucide:refresh-cw", title: "Sinkronisasi Real-time", desc: "Video tersinkronisasi untuk semua penonton", color: "text-blue-400" },
          { icon: "lucide:message-circle", title: "Live Chat", desc: "Ngobrol sambil nonton dengan teman-teman", color: "text-green-400" },
          { icon: "lucide:smile", title: "Reaksi Live", desc: "Kirim reaksi yang muncul di layar", color: "text-yellow-400" },
          { icon: "lucide:mic", title: "Voice Chat", desc: "Bicara langsung dengan penonton lain", color: "text-purple-400" },
        ].map((feature, index) => (
          <div 
            class="bg-dark-400 rounded-2xl p-6 border border-dark-100 hover:border-primary-500/50 transition-all text-center group hover:-translate-y-2"
            data-aos="zoom-in"
            data-aos-delay={index * 100}
          >
            <div class={`w-16 h-16 mx-auto mb-4 bg-dark-300 rounded-2xl flex items-center justify-center group-hover:bg-primary-500/20 transition-colors ${feature.color}`}>
              <Icon icon={feature.icon} class="w-8 h-8" client:load />
            </div>
            <h3 class="text-white font-bold mb-2">{feature.title}</h3>
            <p class="text-secondary-400 text-sm">{feature.desc}</p>
          </div>
        ))}
      </div>
    </section>
  </div>
</MainLayout>
