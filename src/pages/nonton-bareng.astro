---
import MainLayout from '../layouts/MainLayout.astro';
import WatchParty from '../components/WatchParty';

const featuredRooms = [
  { 
    id: 1, 
    movieTitle: "Dune: Part Two", 
    moviePoster: "/1pdfLvkbY9ohJlCjQH2CZjjYVvJ.jpg",
    hostName: "CinemaLover",
    participants: 24,
    startTime: "20:00"
  },
  { 
    id: 2, 
    movieTitle: "Spider-Man: Across the Spider-Verse", 
    moviePoster: "/8Vt6mWEReuy4Of61Lnj5Xj704m8.jpg",
    hostName: "MovieBuff",
    participants: 18,
    startTime: "21:30"
  },
  { 
    id: 3, 
    movieTitle: "The Boy and the Heron", 
    moviePoster: "/jDQPkgzerGophKRRn7MKm071vGS.jpg",
    hostName: "AnimeFan",
    participants: 32,
    startTime: "19:00"
  },
];

const upcomingParties = [
  { title: "Oppenheimer", date: "Sabtu, 8 Feb", time: "20:00", host: "FilmCritic", slots: 15 },
  { title: "Demon Slayer Movie", date: "Minggu, 9 Feb", time: "19:30", host: "OtakuKing", slots: 8 },
  { title: "Killers of the Flower Moon", date: "Senin, 10 Feb", time: "21:00", host: "MovieNight", slots: 20 },
];
---

<MainLayout title="Nonton Bareng - ASTRO" description="Nonton film bareng teman-teman di ASTRO">
  <!-- Hero Section -->
  <div class="relative h-[50vh] overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-primary-500/30 via-violet-500/20 to-magenta-500/30"></div>
    <div class="absolute inset-0 bg-dark-500/80"></div>
    
    <!-- Animated background -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-20 left-20 w-72 h-72 bg-primary-500/20 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-20 right-20 w-96 h-96 bg-violet-500/20 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>
    </div>
    
    <div class="relative h-full container-custom flex items-center justify-center text-center">
      <div data-aos="zoom-in">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-primary-500/20 rounded-full text-primary-400 text-sm font-medium mb-6 border border-primary-500/30">
          <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
          125 Ruangan Aktif
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-white mb-4">
          üçø Nonton <span class="animate-gradient-text">Bareng</span>
        </h1>
        <p class="text-xl text-secondary-300 max-w-2xl mx-auto mb-8">
          Tonton film favorit bersama teman-teman. Sinkronisasi real-time, live chat, dan reaksi bersama!
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <button class="px-8 py-4 bg-gradient-to-r from-primary-500 to-violet-500 rounded-xl text-white font-bold text-lg hover:shadow-glow transition-all hover:scale-105 flex items-center gap-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Buat Ruangan
          </button>
          <button class="px-8 py-4 bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl text-white font-bold text-lg hover:bg-white/20 transition-all flex items-center gap-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
            Cari Ruangan
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="container-custom py-12">
    <!-- Live Now Section -->
    <section class="mb-16" data-aos="fade-up">
      <div class="flex items-center justify-between mb-8">
        <div>
          <h2 class="text-2xl font-bold text-white flex items-center gap-3">
            <span class="flex items-center gap-2 px-3 py-1 bg-red-500 rounded-full text-sm">
              <span class="w-2 h-2 bg-white rounded-full animate-pulse"></span>
              LIVE
            </span>
            Sedang Berlangsung
          </h2>
          <p class="text-secondary-400 mt-1">Gabung sekarang dan tonton bersama!</p>
        </div>
        <a href="/nonton-bareng/semua" class="text-primary-400 hover:text-primary-300 flex items-center gap-1">
          Lihat Semua
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {featuredRooms.map((room, index) => (
          <div 
            class="group relative bg-dark-400 rounded-2xl overflow-hidden border border-dark-100 hover:border-primary-500/50 transition-all duration-300 hover:-translate-y-2 hover:shadow-card"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <!-- Movie Poster -->
            <div class="relative aspect-video overflow-hidden">
              <img 
                src={`https://image.tmdb.org/t/p/w780${room.moviePoster}`}
                alt={room.movieTitle}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-dark-400 to-transparent"></div>
              
              <!-- Live Badge -->
              <div class="absolute top-4 left-4 flex items-center gap-2 px-3 py-1.5 bg-red-500 rounded-full text-white text-sm font-bold">
                <span class="w-2 h-2 bg-white rounded-full animate-pulse"></span>
                LIVE
              </div>

              <!-- Participants -->
              <div class="absolute top-4 right-4 flex items-center gap-2 px-3 py-1.5 bg-black/50 backdrop-blur-sm rounded-full text-white text-sm">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
                {room.participants}
              </div>

              <!-- Play Button -->
              <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                <button class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center text-white hover:bg-primary-600 transition-colors shadow-glow">
                  <svg class="w-8 h-8 ml-1" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z"/>
                  </svg>
                </button>
              </div>
            </div>

            <!-- Info -->
            <div class="p-5">
              <h3 class="text-lg font-bold text-white mb-2 group-hover:text-primary-400 transition-colors">
                {room.movieTitle}
              </h3>
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-2">
                  <img 
                    src={`https://api.dicebear.com/7.x/avataaars/svg?seed=${room.hostName}`}
                    alt={room.hostName}
                    class="w-8 h-8 rounded-full"
                  />
                  <div>
                    <p class="text-white text-sm font-medium">{room.hostName}</p>
                    <p class="text-secondary-400 text-xs">Host</p>
                  </div>
                </div>
                <button class="px-4 py-2 bg-primary-500 hover:bg-primary-600 rounded-lg text-white text-sm font-medium transition-colors">
                  Gabung
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Upcoming Section -->
    <section class="mb-16" data-aos="fade-up">
      <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-2">
        <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        Jadwal Mendatang
      </h2>

      <div class="bg-dark-400 rounded-2xl border border-dark-100 overflow-hidden">
        {upcomingParties.map((party, index) => (
          <div class={`flex items-center justify-between p-5 ${index !== upcomingParties.length - 1 ? 'border-b border-dark-100' : ''} hover:bg-dark-300 transition-colors`}>
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-violet-500 rounded-xl flex items-center justify-center text-white font-bold">
                {party.date.split(' ')[1]}
              </div>
              <div>
                <h3 class="text-white font-bold">{party.title}</h3>
                <p class="text-secondary-400 text-sm">{party.date} ‚Ä¢ {party.time} ‚Ä¢ Host: {party.host}</p>
              </div>
            </div>
            <div class="flex items-center gap-4">
              <span class="text-sm text-secondary-400">{party.slots} slot tersisa</span>
              <button class="px-4 py-2 bg-dark-200 hover:bg-primary-500 rounded-lg text-white text-sm font-medium transition-colors">
                Ingatkan
              </button>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Features Section -->
    <section data-aos="fade-up">
      <h2 class="text-2xl font-bold text-white text-center mb-12">
        Fitur <span class="text-gradient">Nonton Bareng</span>
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {[
          { icon: "üîÑ", title: "Sinkronisasi Real-time", desc: "Video tersinkronisasi untuk semua penonton" },
          { icon: "üí¨", title: "Live Chat", desc: "Ngobrol sambil nonton dengan teman-teman" },
          { icon: "üòÇ", title: "Reaksi Live", desc: "Kirim reaksi yang muncul di layar" },
          { icon: "üìû", title: "Voice Chat", desc: "Bicara langsung dengan penonton lain" },
        ].map((feature, index) => (
          <div 
            class="bg-dark-400 rounded-2xl p-6 border border-dark-100 hover:border-primary-500/50 transition-all text-center"
            data-aos="zoom-in"
            data-aos-delay={index * 100}
          >
            <div class="text-4xl mb-4">{feature.icon}</div>
            <h3 class="text-white font-bold mb-2">{feature.title}</h3>
            <p class="text-secondary-400 text-sm">{feature.desc}</p>
          </div>
        ))}
      </div>
    </section>
  </div>
</MainLayout>
