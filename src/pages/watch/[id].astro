---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Icon } from '@iconify/react';
import { getMovieDetails } from '../../lib/tmdb';

const { id } = Astro.params;

// Fetch real movie data from TMDB
let movie: any = null;
let trailerKey = '';

try {
  movie = await getMovieDetails(Number(id));
  // Get trailer key
  const trailer = movie.videos?.results?.find((v: any) => v.type === 'Trailer' && v.site === 'YouTube');
  trailerKey = trailer?.key || movie.videos?.results?.[0]?.key || '';
} catch (error) {
  console.error('Error fetching movie:', error);
}

// VTuber hosts
const vtuberHosts = [
  { name: "Sakura Hana", avatar: "https://ui-avatars.com/api/?name=Sakura+Hana&background=8B5CF6&color=fff", followers: 12500 },
  { name: "Luna Celestia", avatar: "https://ui-avatars.com/api/?name=Luna+Celestia&background=6366F1&color=fff", followers: 15200 },
  { name: "Yuki Shirogane", avatar: "https://ui-avatars.com/api/?name=Yuki+Shirogane&background=EC4899&color=fff", followers: 8300 },
];

// Select random host based on movie id
const selectedHost = vtuberHosts[Number(id) % vtuberHosts.length];

const watchParty = {
  id: id,
  title: movie ? `Nonton ${movie.title} Bareng!` : "Watch Party",
  movieTitle: movie?.title || "Loading...",
  moviePoster: movie?.posterPath ? `https://image.tmdb.org/t/p/w500${movie.posterPath}` : "https://via.placeholder.com/500x750",
  movieBackdrop: movie?.backdropPath ? `https://image.tmdb.org/t/p/original${movie.backdropPath}` : "https://via.placeholder.com/1920x1080",
  synopsis: movie?.overview || "",
  host: { 
    name: selectedHost.name, 
    avatar: selectedHost.avatar, 
    isVtuber: true,
    followers: selectedHost.followers
  },
  participants: Math.floor(Math.random() * 60) + 25,
  maxParticipants: 100,
  status: 'live',
  startedAt: new Date().toISOString(),
  trailerKey: trailerKey
};

const participants = [
  { id: 1, name: "CinemaFan88", avatar: "https://ui-avatars.com/api/?name=CF&background=3B82F6&color=fff" },
  { id: 2, name: "MovieBuff", avatar: "https://ui-avatars.com/api/?name=MB&background=10B981&color=fff" },
  { id: 3, name: "AnimeFreak", avatar: "https://ui-avatars.com/api/?name=AF&background=F59E0B&color=fff" },
  { id: 4, name: "FilmNerd", avatar: "https://ui-avatars.com/api/?name=FN&background=EF4444&color=fff" },
  { id: 5, name: "VTuberFan", avatar: "https://ui-avatars.com/api/?name=VF&background=8B5CF6&color=fff" },
];

const messages = [
  { id: 1, user: "CinemaFan88", avatar: "https://ui-avatars.com/api/?name=CF&background=3B82F6&color=fff", message: "Hype banget ini film!", time: "2m ago" },
  { id: 2, user: selectedHost.name, avatar: selectedHost.avatar, message: "Selamat datang semuanya! üíú", time: "1m ago", isHost: true },
  { id: 3, user: "MovieBuff", avatar: "https://ui-avatars.com/api/?name=MB&background=10B981&color=fff", message: "Visual nya gila sih", time: "30s ago" },
];
---

<BaseLayout title={`${watchParty.title} - ASTRO Watch Party`}>
  <div class="min-h-screen bg-dark-500 flex flex-col">
    <!-- Top Bar -->
    <div class="bg-dark-400/90 backdrop-blur-xl border-b border-dark-100 px-4 py-3 flex items-center justify-between z-50">
      <div class="flex items-center gap-4">
        <a href="/nonton-bareng" class="p-2 hover:bg-dark-300 rounded-lg transition-colors">
          <Icon icon="lucide:arrow-left" class="w-5 h-5 text-white" client:load />
        </a>
        <div>
          <h1 class="text-white font-bold flex items-center gap-2">
            {watchParty.title}
            <span class="flex items-center gap-1.5 px-2 py-0.5 bg-red-500 rounded-full text-xs">
              <span class="w-1.5 h-1.5 bg-white rounded-full animate-pulse"></span>
              LIVE
            </span>
          </h1>
          <p class="text-secondary-400 text-sm">{watchParty.movieTitle}</p>
        </div>
      </div>
      
      <div class="flex items-center gap-4">
        <div class="flex items-center gap-2 text-secondary-300 text-sm">
          <Icon icon="lucide:users" class="w-4 h-4" client:load />
          <span>{watchParty.participants} menonton</span>
        </div>
        <button class="p-2 hover:bg-dark-300 rounded-lg transition-colors">
          <Icon icon="lucide:settings" class="w-5 h-5 text-white" client:load />
        </button>
        <button class="px-4 py-2 bg-red-500/20 text-red-400 rounded-lg font-medium hover:bg-red-500 hover:text-white transition-colors text-sm">
          Keluar
        </button>
      </div>
    </div>

    <div class="flex-1 flex flex-col lg:flex-row">
      <!-- Main Content -->
      <div class="flex-1 flex flex-col">
        <!-- Video Player -->
        <div class="relative aspect-video bg-black" id="video-container">
          {watchParty.trailerKey ? (
            <!-- YouTube Embedded Player -->
            <iframe 
              id="youtube-player"
              src={`https://www.youtube.com/embed/${watchParty.trailerKey}?autoplay=0&controls=1&rel=0&modestbranding=1&enablejsapi=1`}
              class="absolute inset-0 w-full h-full"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          ) : (
            <!-- Fallback when no trailer -->
            <Fragment>
              <img 
                src={watchParty.movieBackdrop}
                alt={watchParty.movieTitle}
                class="absolute inset-0 w-full h-full object-cover opacity-30"
              />
              <div class="absolute inset-0 flex flex-col items-center justify-center bg-dark-600/50">
                <div class="w-24 h-24 bg-primary-500/20 rounded-full flex items-center justify-center mb-4 animate-pulse">
                  <Icon icon="lucide:play" class="w-12 h-12 text-primary-400 ml-1" client:load />
                </div>
                <p class="text-white text-lg font-medium">Video tidak tersedia</p>
                <p class="text-secondary-400 text-sm mt-1">Trailer untuk film ini belum tersedia</p>
              </div>
            </Fragment>
          )}

          <!-- Sync Status Overlay -->
          <div class="absolute top-4 left-4 flex items-center gap-2 px-3 py-1.5 bg-green-500/20 backdrop-blur-sm rounded-full text-green-400 text-sm border border-green-500/30">
            <Icon icon="lucide:refresh-cw" class="w-4 h-4" client:load />
            <span>Synced with Host</span>
          </div>

          <!-- Participants watching -->
          <div class="absolute top-4 right-4 flex items-center gap-2 px-3 py-1.5 bg-black/60 backdrop-blur-sm rounded-full text-white text-sm">
            <span class="w-2 h-2 bg-red-500 rounded-full animate-pulse"></span>
            <Icon icon="lucide:users" class="w-4 h-4" client:load />
            <span>{watchParty.participants} menonton</span>
          </div>
        </div>

        <!-- Reactions Bar -->
        <div class="bg-dark-400 border-t border-dark-100 p-4">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-2">
              <span class="text-secondary-400 text-sm mr-2">Kirim Reaksi:</span>
              <button class="p-2 hover:bg-dark-300 rounded-lg transition-colors text-2xl hover:scale-125 duration-200" title="Suka">
                ‚ù§Ô∏è
              </button>
              <button class="p-2 hover:bg-dark-300 rounded-lg transition-colors text-2xl hover:scale-125 duration-200" title="Keren">
                üî•
              </button>
              <button class="p-2 hover:bg-dark-300 rounded-lg transition-colors text-2xl hover:scale-125 duration-200" title="Lucu">
                üòÇ
              </button>
              <button class="p-2 hover:bg-dark-300 rounded-lg transition-colors text-2xl hover:scale-125 duration-200" title="Wow">
                üò±
              </button>
              <button class="p-2 hover:bg-dark-300 rounded-lg transition-colors text-2xl hover:scale-125 duration-200" title="Sedih">
                üò¢
              </button>
              <button class="p-2 hover:bg-dark-300 rounded-lg transition-colors text-2xl hover:scale-125 duration-200" title="GG">
                üëè
              </button>
            </div>
            
            <!-- Floating Reactions Display -->
            <div class="flex items-center gap-2 text-secondary-400 text-sm">
              <span>üî• 125</span>
              <span>‚ù§Ô∏è 89</span>
              <span>üòÇ 43</span>
            </div>
          </div>
        </div>

        <!-- Movie Info (below player on mobile) -->
        <div class="lg:hidden p-4 bg-dark-400/50 border-t border-dark-100">
          <div class="flex gap-4">
            <img 
              src={watchParty.moviePoster}
              alt={watchParty.movieTitle}
              class="w-20 rounded-lg"
            />
            <div>
              <h2 class="text-white font-bold">{watchParty.movieTitle}</h2>
              <p class="text-secondary-400 text-sm mt-1 line-clamp-2">{watchParty.synopsis}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="w-full lg:w-96 bg-dark-400 border-l border-dark-100 flex flex-col max-h-[50vh] lg:max-h-none">
        <!-- Tabs -->
        <div class="flex border-b border-dark-100">
          <button class="flex-1 px-4 py-3 text-white font-medium border-b-2 border-primary-500 flex items-center justify-center gap-2">
            <Icon icon="lucide:message-circle" class="w-4 h-4" client:load />
            Chat
          </button>
          <button class="flex-1 px-4 py-3 text-secondary-400 hover:text-white flex items-center justify-center gap-2">
            <Icon icon="lucide:users" class="w-4 h-4" client:load />
            Peserta ({watchParty.participants})
          </button>
        </div>

        <!-- Host Info -->
        <div class="p-4 bg-violet-500/10 border-b border-violet-500/20">
          <div class="flex items-center gap-3">
            <div class="relative">
              <img 
                src={watchParty.host.avatar}
                alt={watchParty.host.name}
                class="w-12 h-12 rounded-full ring-2 ring-violet-500"
              />
              <div class="absolute -bottom-1 -right-1 w-5 h-5 bg-red-500 rounded-full flex items-center justify-center border-2 border-dark-400">
                <span class="w-2 h-2 bg-white rounded-full animate-pulse"></span>
              </div>
            </div>
            <div class="flex-1">
              <p class="text-white font-bold flex items-center gap-2">
                {watchParty.host.name}
                <Icon icon="lucide:check-circle" class="w-4 h-4 text-violet-400" client:load />
                <span class="text-xs bg-violet-500 px-2 py-0.5 rounded-full">HOST</span>
              </p>
              <p class="text-violet-300 text-sm flex items-center gap-1">
                <Icon icon="lucide:users" class="w-3 h-3" client:load />
                {watchParty.host.followers.toLocaleString()} followers
              </p>
            </div>
            <button class="px-3 py-1.5 bg-violet-500 text-white rounded-lg font-medium text-sm hover:bg-violet-600 transition-colors">
              Ikuti
            </button>
          </div>
        </div>

        <!-- Chat Messages -->
        <div class="flex-1 overflow-y-auto p-4 space-y-4" id="chat-container">
          {messages.map((msg) => (
            <div class={`flex gap-3 ${msg.isHost ? 'bg-violet-500/10 -mx-4 px-4 py-2' : ''}`}>
              <img 
                src={msg.avatar}
                alt={msg.user}
                class={`w-8 h-8 rounded-full flex-shrink-0 ${msg.isHost ? 'ring-2 ring-violet-500' : ''}`}
              />
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2">
                  <span class={`font-medium text-sm ${msg.isHost ? 'text-violet-400' : 'text-white'}`}>
                    {msg.user}
                  </span>
                  {msg.isHost && (
                    <span class="text-xs bg-violet-500 px-1.5 py-0.5 rounded text-white">HOST</span>
                  )}
                  <span class="text-secondary-500 text-xs">{msg.time}</span>
                </div>
                <p class="text-secondary-200 text-sm break-words">{msg.message}</p>
              </div>
            </div>
          ))}
          
          <!-- System Message -->
          <div class="text-center py-2">
            <p class="text-secondary-500 text-xs">AnimeFreak bergabung ke room</p>
          </div>
        </div>

        <!-- Chat Input -->
        <div class="p-4 border-t border-dark-100">
          <div class="flex gap-2">
            <div class="flex-1 relative">
              <input 
                type="text" 
                placeholder="Ketik pesan..." 
                class="w-full px-4 py-3 bg-dark-300 border border-dark-100 rounded-xl text-white placeholder:text-secondary-500 focus:outline-none focus:border-primary-500 pr-10"
              />
              <button class="absolute right-3 top-1/2 -translate-y-1/2 text-secondary-400 hover:text-primary-400">
                <Icon icon="lucide:smile" class="w-5 h-5" client:load />
              </button>
            </div>
            <button class="px-4 py-3 bg-primary-500 hover:bg-primary-600 text-white rounded-xl transition-colors">
              <Icon icon="lucide:send" class="w-5 h-5" client:load />
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  /* Hide scrollbar but allow scrolling */
  #chat-container {
    scrollbar-width: thin;
    scrollbar-color: rgba(139, 92, 246, 0.3) transparent;
  }
  
  #chat-container::-webkit-scrollbar {
    width: 6px;
  }
  
  #chat-container::-webkit-scrollbar-track {
    background: transparent;
  }
  
  #chat-container::-webkit-scrollbar-thumb {
    background-color: rgba(139, 92, 246, 0.3);
    border-radius: 20px;
  }
  
  #chat-container::-webkit-scrollbar-thumb:hover {
    background-color: rgba(139, 92, 246, 0.5);
  }
</style>

<script>
  // Auto scroll chat to bottom
  const chatContainer = document.getElementById('chat-container');
  if (chatContainer) {
    chatContainer.scrollTop = chatContainer.scrollHeight;
  }

  // Reaction animation
  document.querySelectorAll('.text-2xl').forEach(btn => {
    btn.addEventListener('click', function(this: HTMLElement) {
      const reaction = this.textContent;
      const container = document.getElementById('video-container');
      if (!container || !reaction) return;
      
      // Create floating reaction
      const float = document.createElement('span');
      float.textContent = reaction;
      float.className = 'absolute text-4xl animate-float-up pointer-events-none';
      float.style.left = Math.random() * 80 + 10 + '%';
      float.style.bottom = '20%';
      container.appendChild(float);
      
      // Remove after animation
      setTimeout(() => float.remove(), 2000);
    });
  });
</script>

<style is:global>
  @keyframes float-up {
    0% {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
    100% {
      opacity: 0;
      transform: translateY(-200px) scale(1.5);
    }
  }
  
  .animate-float-up {
    animation: float-up 2s ease-out forwards;
  }
</style>
