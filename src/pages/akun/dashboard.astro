---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Icon } from '@iconify/react';

// This would come from authentication in production
const user = {
  role: 'user',
  displayName: 'User Demo',
  username: 'userdemo',
  avatarUrl: null,
  isVerified: false
};

const stats = [
  { label: "Film Ditonton", value: "45", icon: "lucide:film", color: "primary" },
  { label: "Review Dibuat", value: "12", icon: "lucide:edit", color: "violet" },
  { label: "Watchlist", value: "28", icon: "lucide:bookmark", color: "magenta" },
  { label: "Favorit", value: "56", icon: "lucide:heart", color: "red" },
];

const recentActivity = [
  { type: 'watch', title: 'Menonton Dune: Part Two', time: '2 jam lalu', icon: 'lucide:play' },
  { type: 'review', title: 'Menulis review Oppenheimer', time: '1 hari lalu', icon: 'lucide:edit' },
  { type: 'watchlist', title: 'Menambah ke watchlist', time: '2 hari lalu', icon: 'lucide:bookmark' },
  { type: 'favorite', title: 'Menyukai Spider-Verse', time: '3 hari lalu', icon: 'lucide:heart' },
];

const watchlistPreview = [
  { id: 1, title: 'Kung Fu Panda 4', poster: '/images/placeholder-poster.jpg', rating: 7.3 },
  { id: 2, title: 'Ghostbusters', poster: '/images/placeholder-poster.jpg', rating: 6.8 },
  { id: 3, title: 'Bob Marley', poster: '/images/placeholder-poster.jpg', rating: 7.0 },
];
---

<BaseLayout title="Dashboard - ASTRO">
  <div class="flex min-h-screen bg-dark-500">
    <!-- Sidebar -->
    <aside class="w-64 bg-dark-400 border-r border-dark-200 flex flex-col fixed h-full">
      <!-- Logo -->
      <div class="p-6 border-b border-dark-200">
        <a href="/" class="flex items-center gap-3">
          <div class="w-10 h-10 bg-gradient-to-br from-primary-500 to-violet-500 rounded-xl flex items-center justify-center">
            <Icon icon="lucide:film" class="w-6 h-6 text-white" client:load />
          </div>
          <div>
            <span class="font-display font-bold text-xl text-white">ASTRO</span>
            <span class="text-xs text-secondary-400 block">Akun Saya</span>
          </div>
        </a>
      </div>

      <!-- Navigation -->
      <nav class="flex-1 p-4 space-y-1">
        <a href="/akun" class="flex items-center gap-3 px-4 py-3 rounded-xl bg-primary-500/10 text-primary-400 border-l-2 border-primary-500">
          <Icon icon="lucide:layout-dashboard" class="w-5 h-5" client:load />
          Dashboard
        </a>
        <a href="/akun/favorit" class="flex items-center gap-3 px-4 py-3 rounded-xl text-secondary-400 hover:bg-dark-300 transition-colors">
          <Icon icon="lucide:heart" class="w-5 h-5" client:load />
          Favorit
        </a>
        <a href="/akun/watchlist" class="flex items-center gap-3 px-4 py-3 rounded-xl text-secondary-400 hover:bg-dark-300 transition-colors">
          <Icon icon="lucide:bookmark" class="w-5 h-5" client:load />
          Watchlist
        </a>
        <a href="/akun/review-saya" class="flex items-center gap-3 px-4 py-3 rounded-xl text-secondary-400 hover:bg-dark-300 transition-colors">
          <Icon icon="lucide:message-square" class="w-5 h-5" client:load />
          Review Saya
        </a>
        <a href="/nonton-bareng" class="flex items-center gap-3 px-4 py-3 rounded-xl text-secondary-400 hover:bg-dark-300 transition-colors">
          <Icon icon="lucide:users" class="w-5 h-5" client:load />
          Nonton Bareng
        </a>
        
        <div class="pt-4 border-t border-dark-200 mt-4">
          <a href="/akun/pengaturan" class="flex items-center gap-3 px-4 py-3 rounded-xl text-secondary-400 hover:bg-dark-300 transition-colors">
            <Icon icon="lucide:settings" class="w-5 h-5" client:load />
            Pengaturan
          </a>
        </div>
      </nav>

      <!-- User Profile Card -->
      <div class="p-4 border-t border-dark-200">
        <div class="flex items-center gap-3 p-3 bg-dark-300 rounded-xl">
          <img 
            src={user.avatarUrl || `https://ui-avatars.com/api/?name=${encodeURIComponent(user.displayName)}&background=1A2DE7&color=fff`}
            alt={user.displayName}
            class="w-10 h-10 rounded-full"
          />
          <div class="flex-1 min-w-0">
            <p class="font-medium text-white truncate">{user.displayName}</p>
            <p class="text-xs text-secondary-400">@{user.username}</p>
          </div>
          <a href="/api/auth/logout" class="p-2 hover:bg-dark-400 rounded-lg transition-colors">
            <Icon icon="lucide:log-out" class="w-4 h-4 text-secondary-400" client:load />
          </a>
        </div>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 ml-64 p-8">
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-3xl font-display font-bold text-white mb-2">
          Selamat Datang, {user.displayName}! ðŸ‘‹
        </h1>
        <p class="text-secondary-400">Berikut ringkasan aktivitas akun Anda</p>
      </div>

      <!-- Stats Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        {stats.map((stat) => (
          <div class="bg-dark-400 rounded-2xl p-6 border border-dark-200 hover:border-primary-500/30 transition-colors">
            <div class="flex items-center justify-between mb-4">
              <div class={`w-12 h-12 bg-${stat.color}-500/20 rounded-xl flex items-center justify-center`}>
                <Icon icon={stat.icon} class={`w-6 h-6 text-${stat.color}-400`} client:load />
              </div>
            </div>
            <p class="text-3xl font-bold text-white mb-1">{stat.value}</p>
            <p class="text-secondary-400 text-sm">{stat.label}</p>
          </div>
        ))}
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Recent Activity -->
        <div class="lg:col-span-2 bg-dark-400 rounded-2xl p-6 border border-dark-200">
          <h2 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
            <Icon icon="lucide:activity" class="w-5 h-5 text-primary-400" client:load />
            Aktivitas Terbaru
          </h2>
          <div class="space-y-4">
            {recentActivity.map((activity) => (
              <div class="flex items-center gap-4 p-4 bg-dark-300/50 rounded-xl hover:bg-dark-300 transition-colors">
                <div class="w-10 h-10 bg-primary-500/20 rounded-xl flex items-center justify-center">
                  <Icon icon={activity.icon} class="w-5 h-5 text-primary-400" client:load />
                </div>
                <div class="flex-1">
                  <p class="text-white font-medium">{activity.title}</p>
                  <p class="text-secondary-500 text-sm">{activity.time}</p>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Watchlist Preview -->
        <div class="bg-dark-400 rounded-2xl p-6 border border-dark-200">
          <h2 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
            <Icon icon="lucide:bookmark" class="w-5 h-5 text-violet-400" client:load />
            Watchlist
          </h2>
          <div class="space-y-3">
            {watchlistPreview.map((movie) => (
              <a href={`/film/${movie.id}`} class="flex items-center gap-3 p-2 rounded-xl hover:bg-dark-300 transition-colors">
                <img 
                  src={movie.poster}
                  alt={movie.title}
                  class="w-12 h-16 rounded-lg object-cover"
                />
                <div class="flex-1 min-w-0">
                  <p class="text-white font-medium truncate">{movie.title}</p>
                  <div class="flex items-center gap-1 text-yellow-400 text-sm">
                    <Icon icon="lucide:star" class="w-3 h-3 fill-current" client:load />
                    {movie.rating}
                  </div>
                </div>
              </a>
            ))}
          </div>
          <a href="/akun/watchlist" class="mt-4 block text-center text-primary-400 hover:text-primary-300 text-sm">
            Lihat Semua â†’
          </a>
        </div>
      </div>

      <!-- VTuber Events Banner -->
      <div class="mt-8 relative overflow-hidden bg-gradient-to-r from-violet-600/20 via-purple-600/20 to-pink-600/20 rounded-2xl p-6 border border-violet-500/30">
        <div class="absolute inset-0 bg-[url('/images/pattern-dots.svg')] opacity-10"></div>
        <div class="relative flex items-center justify-between">
          <div class="flex items-center gap-4">
            <div class="w-16 h-16 bg-gradient-to-br from-violet-500 to-pink-500 rounded-2xl flex items-center justify-center">
              <Icon icon="mdi:account-star" class="w-8 h-8 text-white" client:load />
            </div>
            <div>
              <h3 class="text-xl font-bold text-white">VTuber Watch Party</h3>
              <p class="text-violet-300">Nonton bareng VTuber favorit Anda!</p>
            </div>
          </div>
          <a href="/nonton-bareng" class="px-6 py-3 bg-gradient-to-r from-violet-500 to-pink-500 text-white rounded-xl font-medium hover:shadow-glow-violet transition-all">
            Lihat Event â†’
          </a>
        </div>
      </div>
    </main>
  </div>
</BaseLayout>

<style>
  .bg-primary-500\/20 { background-color: rgb(26 45 231 / 0.2); }
  .bg-violet-500\/20 { background-color: rgb(143 41 188 / 0.2); }
  .bg-magenta-500\/20 { background-color: rgb(240 98 200 / 0.2); }
  .bg-red-500\/20 { background-color: rgb(239 68 68 / 0.2); }
  .text-primary-400 { color: rgb(96 113 255); }
  .text-violet-400 { color: rgb(167 89 214); }
  .text-magenta-400 { color: rgb(244 133 213); }
  .text-red-400 { color: rgb(248 113 113); }
</style>
