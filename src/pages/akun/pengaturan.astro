---
import MainLayout from '../../layouts/MainLayout.astro';

const user = {
  name: "John Doe",
  username: "johndoe",
  email: "john@example.com",
  avatar: "https://ui-avatars.com/api/?name=John+Doe&background=1A2DE7&color=fff&size=128",
  phone: "+62 812 3456 7890",
  bio: "Pecinta film dan anime dari Indonesia. Suka nonton film action dan sci-fi.",
  notifications: {
    email: true,
    push: true,
    newRelease: true,
    watchlistReminder: true,
    commentReply: true,
    followerActivity: false,
  },
  privacy: {
    profilePublic: true,
    showWatchlist: true,
    showFavorites: true,
    showReviews: true,
    showActivity: false,
  },
};
---

<MainLayout title="Pengaturan Akun - ASTRO" description="Pengaturan akun pengguna">
  <div class="container-custom py-8">
    <!-- Header -->
    <div class="mb-8">
      <nav class="flex items-center gap-2 text-sm text-secondary-400 mb-2">
        <a href="/akun" class="hover:text-primary-400 transition-colors">Akun</a>
        <span>/</span>
        <span class="text-white">Pengaturan</span>
      </nav>
      <h1 class="text-3xl font-bold text-white">⚙️ Pengaturan Akun</h1>
      <p class="text-secondary-400 mt-1">Kelola profil dan preferensi akun kamu</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <!-- Sidebar Navigation -->
      <div class="lg:col-span-1">
        <div class="card p-4 sticky top-24">
          <nav class="space-y-1">
            <a href="#profil" class="flex items-center gap-3 px-4 py-3 rounded-lg bg-primary-500/10 text-primary-400 border-l-2 border-primary-500">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              Profil
            </a>
            <a href="#keamanan" class="flex items-center gap-3 px-4 py-3 rounded-lg text-secondary-400 hover:bg-dark-300 transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
              Keamanan
            </a>
            <a href="#notifikasi" class="flex items-center gap-3 px-4 py-3 rounded-lg text-secondary-400 hover:bg-dark-300 transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
              </svg>
              Notifikasi
            </a>
            <a href="#privasi" class="flex items-center gap-3 px-4 py-3 rounded-lg text-secondary-400 hover:bg-dark-300 transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
              Privasi
            </a>
            <a href="#terhubung" class="flex items-center gap-3 px-4 py-3 rounded-lg text-secondary-400 hover:bg-dark-300 transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
              </svg>
              Akun Terhubung
            </a>
            <div class="border-t border-dark-200 my-4"></div>
            <button class="flex items-center gap-3 px-4 py-3 rounded-lg text-red-400 hover:bg-red-500/10 transition-colors w-full">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
              </svg>
              Keluar
            </button>
          </nav>
        </div>
      </div>

      <!-- Main Content -->
      <div class="lg:col-span-3 space-y-8">
        <!-- Profile Section -->
        <section id="profil" class="card p-6">
          <h2 class="text-xl font-bold text-white mb-6">Profil</h2>
          
          <!-- Avatar -->
          <div class="flex items-center gap-6 mb-8 pb-8 border-b border-dark-200">
            <div class="relative">
              <img 
                src={user.avatar}
                alt={user.name}
                class="w-24 h-24 rounded-full border-4 border-primary-500"
              />
              <button class="absolute bottom-0 right-0 w-8 h-8 bg-primary-500 rounded-full flex items-center justify-center text-white hover:bg-primary-600 transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </button>
            </div>
            <div>
              <h3 class="text-white font-medium">{user.name}</h3>
              <p class="text-secondary-400 text-sm">@{user.username}</p>
              <button class="text-primary-400 hover:text-primary-300 text-sm mt-2">
                Ganti Foto Profil
              </button>
            </div>
          </div>

          <!-- Form -->
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="text-sm text-secondary-300 mb-2 block">Nama Lengkap</label>
                <input type="text" value={user.name} class="input w-full" />
              </div>
              <div>
                <label class="text-sm text-secondary-300 mb-2 block">Username</label>
                <input type="text" value={user.username} class="input w-full" />
              </div>
              <div>
                <label class="text-sm text-secondary-300 mb-2 block">Email</label>
                <input type="email" value={user.email} class="input w-full" />
              </div>
              <div>
                <label class="text-sm text-secondary-300 mb-2 block">Nomor Telepon</label>
                <input type="tel" value={user.phone} class="input w-full" />
              </div>
            </div>
            <div>
              <label class="text-sm text-secondary-300 mb-2 block">Bio</label>
              <textarea rows="3" class="input w-full resize-none">{user.bio}</textarea>
              <p class="text-secondary-500 text-xs mt-1">Maks. 200 karakter</p>
            </div>
            <div class="flex justify-end gap-4">
              <button type="button" class="btn-outline">Batal</button>
              <button type="submit" class="btn-primary">Simpan Perubahan</button>
            </div>
          </form>
        </section>

        <!-- Security Section -->
        <section id="keamanan" class="card p-6">
          <h2 class="text-xl font-bold text-white mb-6">Keamanan</h2>
          
          <!-- Change Password -->
          <div class="mb-8 pb-8 border-b border-dark-200">
            <h3 class="font-medium text-white mb-4">Ubah Password</h3>
            <div class="space-y-4 max-w-md">
              <div>
                <label class="text-sm text-secondary-300 mb-2 block">Password Saat Ini</label>
                <input type="password" class="input w-full" placeholder="••••••••" />
              </div>
              <div>
                <label class="text-sm text-secondary-300 mb-2 block">Password Baru</label>
                <input type="password" class="input w-full" placeholder="••••••••" />
              </div>
              <div>
                <label class="text-sm text-secondary-300 mb-2 block">Konfirmasi Password Baru</label>
                <input type="password" class="input w-full" placeholder="••••••••" />
              </div>
              <button type="button" class="btn-primary">Ubah Password</button>
            </div>
          </div>

          <!-- Two Factor Auth -->
          <div>
            <div class="flex items-center justify-between">
              <div>
                <h3 class="font-medium text-white">Autentikasi Dua Faktor (2FA)</h3>
                <p class="text-secondary-400 text-sm">Tambahkan lapisan keamanan ekstra ke akun kamu</p>
              </div>
              <button class="btn-outline">Aktifkan</button>
            </div>
          </div>
        </section>

        <!-- Notification Section -->
        <section id="notifikasi" class="card p-6">
          <h2 class="text-xl font-bold text-white mb-6">Notifikasi</h2>
          
          <div class="space-y-6">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-white font-medium">Notifikasi Email</h3>
                <p class="text-secondary-400 text-sm">Terima update melalui email</p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" class="sr-only peer" checked={user.notifications.email} />
                <div class="w-11 h-6 bg-dark-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-500"></div>
              </label>
            </div>
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-white font-medium">Notifikasi Push</h3>
                <p class="text-secondary-400 text-sm">Terima notifikasi di browser</p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" class="sr-only peer" checked={user.notifications.push} />
                <div class="w-11 h-6 bg-dark-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-500"></div>
              </label>
            </div>
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-white font-medium">Film Baru Rilis</h3>
                <p class="text-secondary-400 text-sm">Notifikasi saat film dari watchlist tayang</p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" class="sr-only peer" checked={user.notifications.newRelease} />
                <div class="w-11 h-6 bg-dark-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-500"></div>
              </label>
            </div>
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-white font-medium">Balasan Komentar</h3>
                <p class="text-secondary-400 text-sm">Notifikasi saat ada yang membalas review kamu</p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" class="sr-only peer" checked={user.notifications.commentReply} />
                <div class="w-11 h-6 bg-dark-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-500"></div>
              </label>
            </div>
          </div>
        </section>

        <!-- Privacy Section -->
        <section id="privasi" class="card p-6">
          <h2 class="text-xl font-bold text-white mb-6">Privasi</h2>
          
          <div class="space-y-6">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-white font-medium">Profil Publik</h3>
                <p class="text-secondary-400 text-sm">Izinkan orang lain melihat profil kamu</p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" class="sr-only peer" checked={user.privacy.profilePublic} />
                <div class="w-11 h-6 bg-dark-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-500"></div>
              </label>
            </div>
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-white font-medium">Tampilkan Watchlist</h3>
                <p class="text-secondary-400 text-sm">Izinkan orang lain melihat watchlist kamu</p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" class="sr-only peer" checked={user.privacy.showWatchlist} />
                <div class="w-11 h-6 bg-dark-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-500"></div>
              </label>
            </div>
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-white font-medium">Tampilkan Review</h3>
                <p class="text-secondary-400 text-sm">Izinkan orang lain melihat review kamu</p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" class="sr-only peer" checked={user.privacy.showReviews} />
                <div class="w-11 h-6 bg-dark-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-500"></div>
              </label>
            </div>
          </div>
        </section>

        <!-- Connected Accounts -->
        <section id="terhubung" class="card p-6">
          <h2 class="text-xl font-bold text-white mb-6">Akun Terhubung</h2>
          
          <div class="space-y-4">
            <div class="flex items-center justify-between p-4 bg-dark-300 rounded-xl">
              <div class="flex items-center gap-4">
                <div class="w-10 h-10 bg-white rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6" viewBox="0 0 24 24">
                    <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                    <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                    <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                    <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-white font-medium">Google</h3>
                  <p class="text-green-400 text-sm">Terhubung</p>
                </div>
              </div>
              <button class="text-red-400 hover:text-red-300 text-sm">Putuskan</button>
            </div>

            <div class="flex items-center justify-between p-4 bg-dark-300 rounded-xl">
              <div class="flex items-center gap-4">
                <div class="w-10 h-10 bg-[#1877F2] rounded-lg flex items-center justify-center text-white">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-white font-medium">Facebook</h3>
                  <p class="text-secondary-400 text-sm">Tidak terhubung</p>
                </div>
              </div>
              <button class="btn-outline py-2 px-4 text-sm">Hubungkan</button>
            </div>

            <div class="flex items-center justify-between p-4 bg-dark-300 rounded-xl">
              <div class="flex items-center gap-4">
                <div class="w-10 h-10 bg-black rounded-lg flex items-center justify-center text-white">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-white font-medium">X (Twitter)</h3>
                  <p class="text-secondary-400 text-sm">Tidak terhubung</p>
                </div>
              </div>
              <button class="btn-outline py-2 px-4 text-sm">Hubungkan</button>
            </div>
          </div>
        </section>

        <!-- Danger Zone -->
        <section class="card p-6 border border-red-500/30">
          <h2 class="text-xl font-bold text-red-400 mb-6">Zona Berbahaya</h2>
          
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-white font-medium">Hapus Semua Data</h3>
                <p class="text-secondary-400 text-sm">Hapus semua watchlist, favorit, dan review kamu</p>
              </div>
              <button class="btn-outline py-2 px-4 text-sm text-red-400 border-red-400/30 hover:bg-red-500/10">
                Hapus Data
              </button>
            </div>
            <div class="flex items-center justify-between pt-4 border-t border-dark-200">
              <div>
                <h3 class="text-white font-medium">Hapus Akun</h3>
                <p class="text-secondary-400 text-sm">Hapus akun secara permanen. Tindakan ini tidak dapat dibatalkan.</p>
              </div>
              <button class="bg-red-500 hover:bg-red-600 text-white py-2 px-4 rounded-lg text-sm transition-colors">
                Hapus Akun
              </button>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</MainLayout>
