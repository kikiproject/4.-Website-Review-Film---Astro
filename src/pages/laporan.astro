---
import MainLayout from '../layouts/MainLayout.astro';
import ReportGenerator from '../components/ReportGenerator';

// Server-side stats (in real app, fetch from database)
const stats = {
  totalMovies: 1247,
  totalReviews: 8956,
  totalUsers: 12450,
  totalViews: 1580000,
  averageRating: 7.8,
  newUsersToday: 45,
  reviewsToday: 128,
  activeNow: 342
};

const quickStats = [
  { label: "Total Film", value: stats.totalMovies.toLocaleString(), icon: "üé¨", color: "from-primary-500 to-primary-600" },
  { label: "Total Review", value: stats.totalReviews.toLocaleString(), icon: "üìù", color: "from-violet-500 to-violet-600" },
  { label: "Total Pengguna", value: stats.totalUsers.toLocaleString(), icon: "üë•", color: "from-magenta-500 to-magenta-600" },
  { label: "Total Views", value: (stats.totalViews / 1000000).toFixed(1) + "M", icon: "üëÅÔ∏è", color: "from-green-500 to-green-600" },
];

const recentActivity = [
  { type: "review", user: "CinemaLover", action: "menulis review untuk", target: "Dune: Part Two", time: "5 menit lalu" },
  { type: "join", user: "MovieBuff", action: "bergabung ke", target: "ASTRO", time: "12 menit lalu" },
  { type: "rating", user: "FilmCritic", action: "memberi rating 9/10 untuk", target: "Oppenheimer", time: "18 menit lalu" },
  { type: "watchparty", user: "AnimeFan", action: "membuat watch party", target: "Your Name", time: "25 menit lalu" },
  { type: "review", user: "ActionHero", action: "menulis review untuk", target: "John Wick 4", time: "32 menit lalu" },
];

const topGenres = [
  { name: "Action", count: 342, percentage: 28 },
  { name: "Drama", count: 286, percentage: 23 },
  { name: "Comedy", count: 198, percentage: 16 },
  { name: "Horror", count: 156, percentage: 13 },
  { name: "Sci-Fi", count: 124, percentage: 10 },
  { name: "Romance", count: 87, percentage: 7 },
  { name: "Animation", count: 54, percentage: 4 },
];
---

<MainLayout title="Laporan - ASTRO" description="Laporan statistik dan analitik ASTRO">
  <!-- Header -->
  <div class="relative overflow-hidden py-12 bg-gradient-to-br from-dark-500 via-dark-400 to-dark-500">
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-0 right-0 w-96 h-96 bg-primary-500/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-violet-500/10 rounded-full blur-3xl"></div>
    </div>

    <div class="container-custom relative">
      <div data-aos="fade-up">
        <h1 class="text-3xl md:text-4xl font-display font-bold text-white mb-2">
          üìä Dashboard Laporan
        </h1>
        <p class="text-secondary-300">Statistik dan analitik website ASTRO</p>
      </div>
    </div>
  </div>

  <div class="container-custom py-12">
    <!-- Quick Stats -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-12">
      {quickStats.map((stat, index) => (
        <div 
          class="bg-dark-400 rounded-2xl p-6 border border-dark-100 hover:border-primary-500/50 transition-all hover:-translate-y-1"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <div class={`w-12 h-12 rounded-xl bg-gradient-to-br ${stat.color} flex items-center justify-center text-2xl mb-4`}>
            {stat.icon}
          </div>
          <p class="text-secondary-400 text-sm mb-1">{stat.label}</p>
          <p class="text-2xl font-bold text-white">{stat.value}</p>
        </div>
      ))}
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Left Column - Charts & Stats -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Report Generator -->
        <div class="bg-dark-400 rounded-2xl border border-dark-100 overflow-hidden" data-aos="fade-up">
          <div class="p-6 border-b border-dark-100">
            <h2 class="text-xl font-bold text-white flex items-center gap-2">
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              Buat Laporan
            </h2>
          </div>
          <div class="p-6">
            <ReportGenerator client:load />
          </div>
        </div>

        <!-- Genre Distribution -->
        <div class="bg-dark-400 rounded-2xl border border-dark-100 overflow-hidden" data-aos="fade-up">
          <div class="p-6 border-b border-dark-100">
            <h2 class="text-xl font-bold text-white flex items-center gap-2">
              <svg class="w-5 h-5 text-violet-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"/>
              </svg>
              Distribusi Genre
            </h2>
          </div>
          <div class="p-6">
            <div class="space-y-4">
              {topGenres.map((genre) => (
                <div class="flex items-center gap-4">
                  <div class="w-24 text-secondary-300 text-sm">{genre.name}</div>
                  <div class="flex-1 h-4 bg-dark-200 rounded-full overflow-hidden">
                    <div 
                      class="h-full bg-gradient-to-r from-primary-500 to-violet-500 rounded-full transition-all duration-1000"
                      style={`width: ${genre.percentage}%`}
                    />
                  </div>
                  <div class="w-16 text-right">
                    <span class="text-white font-medium">{genre.count}</span>
                    <span class="text-secondary-500 text-sm ml-1">({genre.percentage}%)</span>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>

        <!-- Monthly Chart Placeholder -->
        <div class="bg-dark-400 rounded-2xl border border-dark-100 overflow-hidden" data-aos="fade-up">
          <div class="p-6 border-b border-dark-100 flex items-center justify-between">
            <h2 class="text-xl font-bold text-white flex items-center gap-2">
              <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
              </svg>
              Tren Bulanan
            </h2>
            <select class="bg-dark-200 text-white text-sm rounded-lg px-3 py-2 border border-dark-100">
              <option>2024</option>
              <option>2023</option>
            </select>
          </div>
          <div class="p-6">
            <div class="flex items-end justify-between h-48 gap-2">
              {['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'].map((month, index) => {
                const heights = [45, 65, 55, 75, 85, 70, 90, 95, 80, 75, 85, 70];
                return (
                  <div class="flex-1 flex flex-col items-center gap-2">
                    <div 
                      class="w-full bg-gradient-to-t from-primary-500 to-violet-500 rounded-t-lg transition-all duration-500 hover:from-primary-400 hover:to-violet-400"
                      style={`height: ${heights[index]}%`}
                    />
                    <span class="text-xs text-secondary-400">{month}</span>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column - Activity & Info -->
      <div class="space-y-8">
        <!-- Live Stats -->
        <div class="bg-dark-400 rounded-2xl border border-dark-100 overflow-hidden" data-aos="fade-up">
          <div class="p-6 border-b border-dark-100">
            <h2 class="text-lg font-bold text-white flex items-center gap-2">
              <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
              Statistik Real-time
            </h2>
          </div>
          <div class="p-6 space-y-4">
            <div class="flex items-center justify-between">
              <span class="text-secondary-300">Pengguna Online</span>
              <span class="text-white font-bold">{stats.activeNow}</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-secondary-300">Review Hari Ini</span>
              <span class="text-white font-bold">{stats.reviewsToday}</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-secondary-300">User Baru Hari Ini</span>
              <span class="text-white font-bold">{stats.newUsersToday}</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-secondary-300">Rata-rata Rating</span>
              <span class="text-yellow-400 font-bold flex items-center gap-1">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
                {stats.averageRating}
              </span>
            </div>
          </div>
        </div>

        <!-- Recent Activity -->
        <div class="bg-dark-400 rounded-2xl border border-dark-100 overflow-hidden" data-aos="fade-up">
          <div class="p-6 border-b border-dark-100">
            <h2 class="text-lg font-bold text-white flex items-center gap-2">
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Aktivitas Terbaru
            </h2>
          </div>
          <div class="divide-y divide-dark-100">
            {recentActivity.map((activity) => (
              <div class="p-4 hover:bg-dark-300 transition-colors">
                <div class="flex items-start gap-3">
                  <img 
                    src={`https://api.dicebear.com/7.x/avataaars/svg?seed=${activity.user}`}
                    alt={activity.user}
                    class="w-8 h-8 rounded-full"
                  />
                  <div class="flex-1 min-w-0">
                    <p class="text-sm text-secondary-200">
                      <span class="text-white font-medium">{activity.user}</span>
                      {' '}{activity.action}{' '}
                      <span class="text-primary-400">{activity.target}</span>
                    </p>
                    <p class="text-xs text-secondary-400 mt-1">{activity.time}</p>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-dark-400 rounded-2xl border border-dark-100 p-6" data-aos="fade-up">
          <h2 class="text-lg font-bold text-white mb-4">Aksi Cepat</h2>
          <div class="space-y-3">
            <button class="w-full px-4 py-3 bg-primary-500 hover:bg-primary-600 rounded-xl text-white font-medium transition-colors flex items-center justify-center gap-2" onclick="window.print()">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
              </svg>
              Cetak Halaman
            </button>
            <button class="w-full px-4 py-3 bg-dark-200 hover:bg-dark-100 rounded-xl text-white font-medium transition-colors flex items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
              </svg>
              Export ke Excel
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
