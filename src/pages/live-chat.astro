              </svg>
              Online Sekarang
            </h2>
          </div>
          <div class="p-2">
            {activeUsers.map((user) => (
              <div class="flex items-center gap-3 px-4 py-2 hover:bg-dark-300 rounded-xl transition-colors cursor-pointer">
                <div class="relative">
                  <img 
                    src={`https://api.dicebear.com/7.x/avataaars/svg?seed=${user.avatar}`}
                    alt={user.name}
                    class="w-8 h-8 rounded-full"
                  />
                  <span class={`absolute bottom-0 right-0 w-3 h-3 rounded-full border-2 border-dark-400 ${user.status === 'online' ? 'bg-green-500' : 'bg-yellow-500'}`}></span>
                </div>
                <span class="text-sm text-secondary-200">{user.name}</span>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Main Chat Area -->
      <div class="lg:col-span-3" data-aos="fade-up">
        <div class="bg-dark-400 rounded-2xl border border-dark-100 overflow-hidden h-[70vh]">
