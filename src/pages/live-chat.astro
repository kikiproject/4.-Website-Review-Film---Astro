<MainLayout title="Live Chat - ASTRO" description="Chat dengan komunitas pecinta film ASTRO">
  <!-- Hero Section -->
  <div class="relative py-12 bg-gradient-to-br from-dark-500 via-dark-400 to-dark-500 overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute top-0 left-1/4 w-64 h-64 bg-primary-500/20 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-1/4 w-64 h-64 bg-violet-500/20 rounded-full blur-3xl"></div>
    </div>

    <div class="container-custom relative">
      <div data-aos="fade-up" class="text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-green-500/20 rounded-full text-green-400 text-sm font-medium mb-4 border border-green-500/30">
          <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
