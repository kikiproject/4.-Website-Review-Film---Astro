        </p>
      </div>
    </div>
  </div>

  <div class="container-custom py-8">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <!-- Sidebar - Chat Rooms -->
      <div class="lg:col-span-1 space-y-6" data-aos="fade-right">
        <!-- Chat Rooms -->
        <div class="bg-dark-400 rounded-2xl border border-dark-100 overflow-hidden">
          <div class="p-4 border-b border-dark-100">
            <h2 class="font-bold text-white flex items-center gap-2">
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"/>
              </svg>
              Chat Rooms
            </h2>
          </div>
          <div class="p-2">
            {chatRooms.map((room, index) => (
              <button 
                class={`w-full flex items-center gap-3 px-4 py-3 rounded-xl transition-colors ${index === 0 ? 'bg-primary-500/20 text-primary-400' : 'text-secondary-300 hover:bg-dark-300'}`}
              >
                <span class="text-xl">{room.icon}</span>
                <div class="flex-1 text-left">
                  <p class="font-medium text-sm">{room.name}</p>
                  <p class="text-xs text-secondary-500">{room.members} members</p>
                </div>
              </button>
            ))}
          </div>
        </div>

        <!-- Active Users -->
        <div class="bg-dark-400 rounded-2xl border border-dark-100 overflow-hidden">
          <div class="p-4 border-b border-dark-100">
            <h2 class="font-bold text-white flex items-center gap-2">
              <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
