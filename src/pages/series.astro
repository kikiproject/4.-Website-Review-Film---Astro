---

<MainLayout title="Series - ASTRO" description="Koleksi TV series terbaik dari berbagai platform streaming">
  <!-- Hero Section -->
  <div class="relative h-[50vh] overflow-hidden">
    <img 
      src="https://image.tmdb.org/t/p/original/yDHYTfA3R0jFYba16jBB1ef8oIt.jpg" 
      alt="Series"
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-dark-500 via-dark-500/70 to-transparent"></div>
    <div class="absolute inset-0 flex items-center justify-center text-center">
      <div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-white mb-4">
          üì∫ TV Series
        </h1>
        <p class="text-xl text-secondary-300 max-w-2xl mx-auto">
          Temukan serial TV terbaik dari berbagai platform streaming
        </p>
      </div>
    </div>
  </div>

  <div class="container-custom py-8">
    <!-- Networks -->
    <section class="mb-12 -mt-16 relative z-10">
      <h2 class="text-xl font-bold text-white mb-6">Platform Streaming</h2>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
        {networks.map((network) => (
          <a 
            href={`/series/network/${network.name.toLowerCase().replace(' ', '-').replace('+', 'plus')}`}
            class={`card-hover p-6 text-center group bg-gradient-to-br ${network.color} hover:scale-105 transition-transform duration-300`}
          >
            <div class="text-4xl mb-2">{network.logo}</div>
            <h3 class="text-white font-medium">{network.name}</h3>
          </a>
        ))}
      </div>
    </section>

    <!-- Series Status -->
    <section class="mb-12">
      <h2 class="text-xl font-bold text-white mb-6">Status Series</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <a href="/series/ongoing" class="card-hover p-6 text-center">
          <div class="w-12 h-12 bg-green-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-green-400 text-2xl">‚ñ∂Ô∏è</span>
          </div>
          <h3 class="text-white font-medium mb-2">Ongoing</h3>
          <p class="text-secondary-400 text-sm">Series yang masih tayang</p>
        </a>
        <a href="/series/completed" class="card-hover p-6 text-center">
          <div class="w-12 h-12 bg-blue-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-blue-400 text-2xl">‚úÖ</span>
          </div>
          <h3 class="text-white font-medium mb-2">Completed</h3>
          <p class="text-secondary-400 text-sm">Series yang sudah selesai</p>
        </a>
        <a href="/series/returning" class="card-hover p-6 text-center">
          <div class="w-12 h-12 bg-yellow-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-yellow-400 text-2xl">üîÑ</span>
          </div>
          <h3 class="text-white font-medium mb-2">Returning</h3>
          <p class="text-secondary-400 text-sm">Menunggu season baru</p>
        </a>
        <a href="/series/cancelled" class="card-hover p-6 text-center">
          <div class="w-12 h-12 bg-red-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-red-400 text-2xl">‚ùå</span>
          </div>
          <h3 class="text-white font-medium mb-2">Cancelled</h3>
          <p class="text-secondary-400 text-sm">Series yang dibatalkan</p>
        </a>
      </div>
    </section>

    <!-- Genres -->
    <section class="mb-12">
      <h2 class="text-xl font-bold text-white mb-6">Genre TV Series</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {genres.map((genre) => (
          <a 
            href={`/series/genre/${genre.name.toLowerCase()}`}
            class="card-hover p-4 flex items-center gap-4 group"
          >
            <div class="text-3xl">{genre.icon}</div>
            <div>
              <h3 class="text-white font-medium group-hover:text-primary-400 transition-colors">
                {genre.name}
              </h3>
              <p class="text-secondary-500 text-sm">{genre.count.toLocaleString()} judul</p>
            </div>
          </a>
        ))}
      </div>
    </section>

    <!-- Main Content -->
    <section>
      <div class="flex flex-col md:flex-row gap-8">
        <!-- Sidebar Filters -->
        <div class="w-full md:w-64 flex-shrink-0">
          <div class="card p-6 sticky top-24">
            <h3 class="font-bold text-white mb-4">Filter</h3>
            
            <!-- Network Filter -->
            <div class="mb-6">
              <label class="text-sm text-secondary-300 mb-2 block">Platform</label>
              <select class="input w-full text-sm">
                <option value="">Semua Platform</option>
                <option value="netflix">Netflix</option>
                <option value="hbo">HBO Max</option>
                <option value="disney">Disney+</option>
                <option value="apple">Apple TV+</option>
                <option value="prime">Prime Video</option>
              </select>
            </div>

            <!-- Genre Filter -->
            <div class="mb-6">
              <label class="text-sm text-secondary-300 mb-2 block">Genre</label>
              <select class="input w-full text-sm">
                <option value="">Semua Genre</option>
                <option value="drama">Drama</option>
                <option value="comedy">Comedy</option>
                <option value="thriller">Thriller</option>
                <option value="scifi">Sci-Fi</option>
                <option value="fantasy">Fantasy</option>
              </select>
            </div>

            <!-- Year Filter -->
            <div class="mb-6">
              <label class="text-sm text-secondary-300 mb-2 block">Tahun Rilis</label>
              <div class="flex gap-2">
                <input type="number" placeholder="Dari" class="input w-1/2 text-sm" min="1950" max="2024" />
                <input type="number" placeholder="Sampai" class="input w-1/2 text-sm" min="1950" max="2024" />
              </div>
            </div>

            <!-- Rating Filter -->
            <div class="mb-6">
              <label class="text-sm text-secondary-300 mb-2 block">Rating Minimum</label>
              <input type="range" min="0" max="10" step="0.5" value="0" class="w-full" />
              <div class="flex justify-between text-xs text-secondary-500 mt-1">
                <span>0</span>
                <span>5</span>
                <span>10</span>
              </div>
            </div>

            <!-- Status Filter -->
            <div class="mb-6">
              <label class="text-sm text-secondary-300 mb-2 block">Status</label>
              <div class="space-y-2">
                <label class="flex items-center gap-2 text-sm text-secondary-300 cursor-pointer">
                  <input type="checkbox" class="form-checkbox rounded bg-dark-300 border-dark-100 text-primary-500" />
                  <span>Ongoing</span>
                </label>
                <label class="flex items-center gap-2 text-sm text-secondary-300 cursor-pointer">
                  <input type="checkbox" class="form-checkbox rounded bg-dark-300 border-dark-100 text-primary-500" />
                  <span>Completed</span>
                </label>
                <label class="flex items-center gap-2 text-sm text-secondary-300 cursor-pointer">
                  <input type="checkbox" class="form-checkbox rounded bg-dark-300 border-dark-100 text-primary-500" />
                  <span>Returning</span>
                </label>
              </div>
            </div>

            <button class="btn-primary w-full">
              Terapkan Filter
            </button>
          </div>
        </div>

        <!-- Series Grid -->
        <div class="flex-1">
          <div class="flex items-center justify-between mb-6">
            <p class="text-secondary-400">Menampilkan <span class="text-white">1-12</span> dari <span class="text-white">5,234</span> series</p>
            <select class="input w-48 text-sm">
              <option value="popularity">Paling Populer</option>
              <option value="rating">Rating Tertinggi</option>
              <option value="newest">Terbaru</option>
              <option value="oldest">Terlama</option>
            </select>
          </div>

          <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4">
            {tvSeries.map((series) => (
              <MovieCard 
                id={series.id}
                title={series.title}
                posterPath={series.posterPath}
                releaseDate={series.releaseDate}
                voteAverage={series.voteAverage}
              />
            ))}
          </div>

          <!-- Pagination -->
          <div class="flex items-center justify-center gap-2 mt-12">
            <button class="w-10 h-10 rounded-lg bg-dark-300 text-secondary-400 hover:bg-dark-200 transition-colors" disabled>
              <svg class="w-5 h-5 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
            </button>
            <button class="w-10 h-10 rounded-lg bg-primary-500 text-white">1</button>
            <button class="w-10 h-10 rounded-lg bg-dark-300 text-secondary-300 hover:bg-dark-200 transition-colors">2</button>
            <button class="w-10 h-10 rounded-lg bg-dark-300 text-secondary-300 hover:bg-dark-200 transition-colors">3</button>
            <span class="text-secondary-500">...</span>
            <button class="w-10 h-10 rounded-lg bg-dark-300 text-secondary-300 hover:bg-dark-200 transition-colors">436</button>
            <button class="w-10 h-10 rounded-lg bg-dark-300 text-secondary-300 hover:bg-dark-200 transition-colors">
              <svg class="w-5 h-5 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </section>
  </div>
</MainLayout>
